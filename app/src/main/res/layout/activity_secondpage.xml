<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather1"
    android:layout_height="match_parent"
    tools:context=".secondpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/Edittext_for_city"

            android:layout_width="286dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35sp"
            android:background="@drawable/background_file"
            android:padding="10sp"


            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:hint="Enter City Name"
            android:text=""
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textColorHint="@color/white">


        </EditText>

        <Button
            android:id="@+id/Search_Button"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ic_baseline_search_24"
            android:backgroundTint="@color/white">


        </Button>




    </LinearLayout>

    <TextView
        android:id="@+id/city_textview_secondpage"
        android:layout_width="match_parent"
        android:layout_marginTop="35sp"
        android:text="London, GB"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:layout_height="wrap_content">


    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Imageview_Secondpage"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            >


        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Temperaturetextview_Secondpage_sideimage"

                android:layout_width="match_parent"
                android:text="25 C"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textAlignment="center"

                android:layout_height="wrap_content">


            </TextView>

            <TextView
                android:id="@+id/textview_besideImage"
                android:layout_width="match_parent"
                android:text="Few Clouds"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textAlignment="center"

                android:layout_height="wrap_content">


            </TextView>


        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:text="Detail's : "
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:paddingLeft="14dp"
        android:layout_height="wrap_content">



    </TextView>


    <LinearLayout
        android:layout_marginTop="32sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/humidity_secondpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity "
            android:layout_marginLeft="80sp"

            android:textColor="@color/white"
            android:textSize="27dp">


        </TextView>

        <TextView
            android:id="@+id/humidity_value_secondpage"

            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="50% "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="-15dp"
            android:textSize="27dp">


        </TextView>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Maxvalue_secondpage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max. Temp "
            android:layout_marginLeft="80sp"

            android:textColor="@color/white"
            android:textSize="27dp">


        </TextView>

        <TextView
            android:id="@+id/Maxvalue_value_secondpage"

            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="25 C "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="-35dp"
            android:textSize="27dp">


        </TextView>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Minvalue_secondpage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min. Temp "
            android:layout_marginLeft="80sp"

            android:textColor="@color/white"
            android:textSize="27dp">


        </TextView>

        <TextView
            android:id="@+id/Minvalue_value_secondpage"

            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="25 C "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="-28dp"
            android:textSize="27dp">


        </TextView>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Pressure_secondpage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure "
            android:layout_marginLeft="80sp"

            android:textColor="@color/white"
            android:textSize="27dp">


        </TextView>

        <TextView
            android:id="@+id/Pressure_value_secondpage"

            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="50 "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="-15dp"
            android:textSize="27dp">


        </TextView>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Wind_secondpage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind "
            android:layout_marginLeft="80sp"

            android:textColor="@color/white"
            android:textSize="27dp">


        </TextView>

        <TextView
            android:id="@+id/Wind_value_secondpage"

            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="5 "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="29sp"

            android:textSize="27dp">


        </TextView>




    </LinearLayout>









</LinearLayout>